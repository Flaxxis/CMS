<!-- JQUERY MASKED INPUT -->
<script src="/admin_template/js/plugin/masked-input/jquery.maskedinput.min.js"></script>

<!-- JQUERY SELECT2 INPUT -->
<script src="/admin_template/js/plugin/select2/select2.min.js"></script>

<!-- JQUERY UI + Bootstrap Slider -->
<script src="/admin_template/js/plugin/bootstrap-slider/bootstrap-slider.min.js"></script>

